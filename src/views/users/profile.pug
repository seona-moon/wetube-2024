extends ../base.pug
include ../mixins/video

block content
    div.profile__data
        if(loggedInUser.avatarUrl.startsWith("upload"))
            img.avatar(src="/" + loggedInUser.avatarUrl)
        if(loggedInUser.avatarUrl.startsWith("http"))
            img.avatar(src=loggedInUser.avatarUrl)
        h3=user.name
    div.video-grid
        each video in user.videos
            +video(video)
        else
            span.empty__message No videos found