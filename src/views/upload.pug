extends base.pug

block content
    if errorMessage  
        span=errorMessage
    form(method="post", enctype="multipart/form-data") 
        label(for="video") Video File
        input(type="file", accept="video/*", required, id="video", name="video")
        input(placeholder = "Title", name="title", required, type="text")
        input(placeholder = "Description", name="description", required, type="text")
        input(placeholder = "Hashtags, separated by comma.", name="hashtags", required, type="hashtags")
        input(value ="Upload Video" type="submit")