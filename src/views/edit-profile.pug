extends base.pug

block content 
    if errorMessage
        span=errorMessage
    form(method="POST", enctype="multipart/form-data")
        if(loggedInUser.avatarUrl.startsWith("upload"))
            img(src="/" + loggedInUser.avatarUrl,height="200",width="200")
        if(loggedInUser.avatarUrl.startsWith("http"))
            img(src=loggedInUser.avatarUrl,height="200",width="200")
        label(for="avatar") Avatar
        input(type="file", id="avatar", name="avatar", accept="image/*")
        input(name="name", placeholder="Name", value=loggedInUser.name, type="text", required)
        input(name="email", placeholder="Email", value=loggedInUser.email, type="email", required)
        input(name="username", placeholder="Username", value=loggedInUser.username, type="text", required)
        input(name="location",placeholder="Location", value=loggedInUser.location, type="text", required)
        input(type="submit", value="Update Profile")
        if !loggedInUser.socialOnly
            hr
            a(href="change-password") Change Password &rarr;